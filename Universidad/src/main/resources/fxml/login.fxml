<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="460.0" prefWidth="330.0" spacing="50.0" style="-fx-background-color: #3b234a;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.LoginController">
   <children>
      <Label text="Iniciar Sesión" textFill="WHITE">
         <font>
            <Font name="Trebuchet MS Bold" size="22.0" />
         </font></Label>
      <VBox alignment="CENTER" prefHeight="94.0" prefWidth="338.0" spacing="30.0">
         <children>
            <Label text="Usuario" textFill="WHITE">
               <font>
                  <Font name="Trebuchet MS" size="13.0" />
               </font></Label>
            <TextField fx:id="txt_user" maxHeight="200.0" maxWidth="200.0" style="-fx-background-color: #baafc4; -fx-background-radius: 10;">
               <font>
                  <Font name="Georgia" size="12.0" />
               </font></TextField>
            <Label text="Contraseña" textFill="WHITE">
               <font>
                  <Font name="Trebuchet MS" size="13.0" />
               </font></Label>
            <TextField fx:id="txt_password" maxHeight="200.0" maxWidth="200.0" style="-fx-background-color: #baafc4; -fx-background-radius: 10;">
